<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alpharelevant.idarenow.SignupStep2Fragment"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Profile Details"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/EdtxtSignupFullName"

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:drawableLeft="@drawable/icon_person_selector"
            android:hint="Full Name"
            android:textColorHint="#FFF"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorWhite"
            android:maxLength="50"
            android:maxLines="1"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/EdtxtSignupBirthdate"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="@color/colorWhite"
            android:inputType="none"
            android:drawableLeft="@drawable/icon_calendar_selector"
            android:fontFamily="sans-serif"
            android:hint="Birthdate"
            android:maxLength="20"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textColorHint="#FFF"
            android:textSize="20dp" />


        <RadioGroup
            android:id="@+id/radioSex"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <RadioButton
                android:id="@+id/radioSignupMale"
                android:layout_width="wrap_content"
                android:buttonTint="@color/colorWhite"
                android:layout_height="wrap_content"
                android:text="MALE"
                android:textSize="20sp"
                android:layout_marginRight="18dp"
                android:textColor="@color/colorWhite"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioSignupFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorWhite"
                android:text="FEMALE"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"/>

        </RadioGroup>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btnSignupStep2Back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_circle"
        android:drawableLeft="@drawable/ic_back_selector"
        android:drawableRight="@drawable/button_circle"
        android:paddingLeft="10dp"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:fontFamily="sans-serif"
        />

    <Button
        android:id="@+id/btnSignupStep2Next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:background="@drawable/button_rounded"
        android:text="Next"
        android:drawableRight="@drawable/ic_next_selector"
        android:paddingRight="15dp"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="17sp"
        android:fontFamily="sans-serif"
        />
    </LinearLayout>
    </LinearLayout>
</FrameLayout>
