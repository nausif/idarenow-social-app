<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alpharelevant.idarenow.SignupStep1Fragment"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Personal Information"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/EdtxtSignupEmail"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:drawableLeft="@drawable/icon_mail_selector"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#FFF"
        android:textColor="@color/colorWhite"
        android:backgroundTint="@color/colorWhite"
        android:maxLength="100"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/EdtxtSignupPass"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColorHint="#FFF"
        android:textColor="@color/colorWhite"
        android:drawableLeft="@drawable/icon_password_selector"
        android:hint="Password"
        android:maxLength="100"
        android:maxLines="1"
        android:inputType="textPassword"
        android:backgroundTint="@color/colorWhite"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textSize="20dp" />

        <Button
            android:id="@+id/btnSignupStep1Next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:background="@drawable/button_rounded"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:text="Next"
            android:drawableRight="@drawable/ic_next_selector"
            android:paddingRight="15dp"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="17sp"
            android:fontFamily="sans-serif"
            />



</LinearLayout>

</FrameLayout>
